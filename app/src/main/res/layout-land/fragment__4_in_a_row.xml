<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framelayout_4inARow">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        android:src="@drawable/ic_game_controller" />

    <TextView
        android:id="@+id/fragment_TicTacToe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="70dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:text="@string/_4_in_a_row" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/button1_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button1_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button1_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button1_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button1_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/button2_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button2_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button2_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button2_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button2_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/button3_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/button3_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

