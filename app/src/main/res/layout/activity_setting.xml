<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">


    <TextView
        android:id="@+id/textView_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="@string/name_of_player_one" />

    <EditText
        android:id="@+id/TextPersonName_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_gravity="center|top"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name" />

    <TextView
        android:id="@+id/textView_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="@string/name_of_player_two" />

    <EditText
        android:id="@+id/TextPersonName_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/imageBtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#ffffff"
        app:srcCompat="@drawable/ic_back_arrow" />

    <ImageButton
        android:id="@+id/imageBtn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="70dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_save" />
</FrameLayout>